{
  "name" : "OneRoom Screen Sharing",
  "author": "OneRoom",
  "version" : "1.3",
  "manifest_version" : 2,
  "minimum_chrome_version": "34",
  "description" : "This Chrome extension enables screen sharing on http://joinoneroom.com/.",
  "homepage_url": "http://joinoneroom.com/",
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  },
  "content_scripts": [ {
   "js": [ "content-script.js" ],
   "all_frames": true,
   "matches": ["*://*.joinoneroom.com/*", "*://*.joinoneroom.com:*/*", "*://localhost/*", "*://localhost:*/*", "*://*.ngrok.com/*", "*://*.ngrok.io/*"]
  }],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "desktopCapture"
  ],
  "web_accessible_resources": [
    "icon.png"
  ]
}
